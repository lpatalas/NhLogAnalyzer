<Window x:Class="NhLogAnalyzer.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ae="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="ShellView"
		Height="700"
		Width="1000">
	<DockPanel>
		<ToolBar DockPanel.Dock="Top">
			<Button x:Name="OpenFile">Open</Button>
		</ToolBar>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<ContentControl x:Name="StatementList" Grid.Column="0" />
			<GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="3" />
			<ContentControl x:Name="StatementDetails" Grid.Column="2" />
		</Grid>
	</DockPanel>
</Window>
